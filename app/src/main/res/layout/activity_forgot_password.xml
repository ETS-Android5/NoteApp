<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="271dp"
        android:layout_height="212dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_undraw_taking_notes_re_bnaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/forgot"
            android:textColor="@color/teal_200"
            android:textSize="35sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có thể lấy lại ngay !"
            android:textColor="@color/yellow"
            android:textSize="23sp">

        </TextView>

    </LinearLayout>

    <EditText
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bgr_edittext"
        android:hint="Nhập email đã đăng ký của bạn:"
        android:textAlignment="center"
        android:textColorHint="@color/teal_200"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </EditText>


    <Button
        android:id="@+id/passwordrecoverbutton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="#19BEEC"
        android:text="KHÔI PHỤC"
        app:layout_constraintEnd_toEndOf="@+id/forgotpassword"
        app:layout_constraintStart_toStartOf="@+id/forgotpassword"
        app:layout_constraintTop_toBottomOf="@+id/forgotpassword">

    </Button>

    <TextView
        android:id="@+id/gobacktologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="32dp"
        android:text="Trở lại màn hình đăng nhập ?"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordrecoverbutton"
        app:layout_constraintStart_toStartOf="@+id/passwordrecoverbutton"
        app:layout_constraintTop_toBottomOf="@+id/passwordrecoverbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>